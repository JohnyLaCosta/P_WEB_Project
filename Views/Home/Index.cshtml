@model  ECarSharing.ViewModels.HomeViewModel

@{
    ViewBag.Title = "Home Page";
}


@if (Request.IsAuthenticated)
{
    if (User.IsInRole("Renter"))
    {
        using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="main_container">
                <img src="https://www.legendarylist.com/wp-content/uploads/2015/12/you-gonna-love-this-strikingly-beautiful-2016-chevrolet-camaro-ss-dark-red-1.jpg" alt="Camaro" />
            </div>
            <div class="container" style="display:inline; position:absolute; top:50%; text-align:center; z-index:1000">
                <h3 style="color:white;" class="shadow">Choose your time</h3>
                <div class="col-md-3 col-sm-3 col-xs-3 col-lg-3" style="left:15%; margin-right: 20px;">
                    <div class="form-group">
                        <div class="input-group date" id="initData" typeof="datetime-local">
                            @Html.EditorFor(model => model.Init, new { htmlAttributes = new { @class = "form-control", @id = "init" } })
                            <span class="input-group-addon glyphicon glyphicon-calendar" style="top:0px"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-3 col-lg-3" style="left:15%">
                    <div class="form-group">
                        <div class="input-group date" id="endData" typeof="datetime-local">
                            @Html.EditorFor(model => model.End, new { htmlAttributes = new { @class = "form-control", @id = "end" } })
                            <span class="input-group-addon glyphicon glyphicon-calendar" style="top:0px"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-3 col-sm-3 col-xs-3 col-lg-3" style="left:15%">
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" class="btn btn-default" value="Choose" />
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="container" style="text-align:center; background-color:rgba(200, 198, 198, 0.89); height:500px; width:100%">
            <div style="padding-top:20px">
                <h2>How it works?</h2>
                <p>Only need 3 steps</p>

                <div style="display:table; width:100%; padding-top: 5%">
                    <div class="circle">
                        <div style="display: inline;">
                            <h3>1. Choose your time</h3>
                            <p>Select init and end date for rent</p>
                        </div>
                    </div>
                    <div style="display:table-cell; width: 20px"></div>
                    <div class="circle">
                        <div style="display: inline;">
                            <h3>2. Choose a car</h3>
                            <p>Select the best car for you</p>
                        </div>
                    </div>
                    <div style="display:table-cell; width: 20px"></div>
                    <div class="circle">
                        <div style="display: inline;">
                            <h3>3. Enjoy it!</h3>
                            <p>Remember to give it back in a post</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    if (User.IsInRole("Tenant"))
    {
        <div class="container">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">

                    <div class="item active">
                        <img src="https://media3.giphy.com/media/hVfxNl4uUVPGxrM27y/source.gif" alt="Provide vehicle" style="width: 100%; height:500px" />
                        <div class="carousel-caption">
                            <h3 class="shadow">1. Provide eletrical vehicles for others to rent!</h3>
                        </div>
                    </div>

                    <div class="item">
                        <img src="https://media0.giphy.com/media/KJg6Znn4V1Jcs/source.gif" alt="money rain" style="width: 100%; height:500px" />
                        <div class="carousel-caption">
                            <h3 class="shadow">2. Gain money every hour for every rent made!</h3>
                        </div>
                    </div>

                    <div class="item">
                        <img src="https://media1.tenor.com/images/f1faa8fbf39675dd8e1bd931bc151d1f/tenor.gif?itemid=5056303" alt="Woow" style="width: 100%; height:500px" />
                        <div class="carousel-caption">
                            <h3 class="shadow">3. We took only 10% for each rent!</h3>
                        </div>
                    </div>

                    <div class="item">
                        <img src="http://cdn-i.imagechef.com/ic/templimg2/Enjoy%20it.jpg" alt="enjoy it" style="width: 100%; height:500px" />
                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    }
}
else
{
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="https://api.time.com/wp-content/uploads/2017/07/green-spaces.jpg?w=600&amp;quality=85" alt="Resultado de imagem para green image" style="width: 100%; height:500px" />
                    <div class="carousel-caption">
                        <h3 class="shadow">Who we are?</h3>
                        <p class="shadow">We are a company that aims better world</p>
                        <p class="shadow">We offer you the possibility to rent or provide</p>
                    </div>
                </div>

                <div class="item">
                    <img src="https://www.nac-travel.org/wp-content/uploads/2019/08/thumbnail_Registering-Business.jpg" alt="Regista-te" style="width: 100%; height:500px" />
                    <div class="carousel-caption">
                        <h3 class="shadow">Register to find out more</h3>
                        <p class="shadow">Do you want to use vehicles? Register as a renter</p>
                        <p class="shadow">Do you want to provide vehicles? Register as a tenant</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
}


@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#initData').datetimepicker({
                format: "YYYY-MM-DD HH:mm"
            })

            $("#initData").on("dp.change", function (e) {
                $('#endData').data("DateTimePicker").minDate(e.date)
            });


            $('#endData').datetimepicker({
                useCurrent: false,
                format: "YYYY-MM-DD HH:mm"
            });

            $("#endData").on("dp.change", function (e) {
                $('#initData').data("DateTimePicker").maxDate(e.date)
            });
        })

    </script>

}
